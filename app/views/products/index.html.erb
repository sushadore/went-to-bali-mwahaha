<%= render('layouts/errors', :object => @order_item) %>
<div id="product_detail"></div>
<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%= link_to product.name, product_path(product), remote: true %></h4>
      <p><%= product.description %></p>
      <p><%= number_to_currency product.price %></p>
      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.text_field :quantity, placeholder: "Quantity, may not be blank or negative" %>
        <span id="add_to_cart" class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>
    </div>
  <% end %>
</div>
</div>
