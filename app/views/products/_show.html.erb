<h1 id="hide_details", remote: true><%= @product.name %></h1>
<%= image_tag(@product.image) %>
<p><%=number_to_currency @product.price %></p>
<p><%= @product.description %></p>
<% if admin %>
  <%= link_to "Edit Product",  edit_product_path(@product) %> | <%= link_to "Delete Product", product_path(@product), method: :delete, data: {:confirm => "You sure you want to delete this product?"} %>
<% end %>
