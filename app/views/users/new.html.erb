<h1>Sign up</h1>

<%= form_for :user, url: '/users' do |f| %>

  Name: <%= f.text_field :name %>
  Email: <%= f.text_field :email %>
  Password: <%= f.password_field :password, placeholder: "6-15 characters including a number, a lowercase letter & an uppercase letter." %>
  Password Confirmation: <%= f.password_field :password_confirmation, placeholder: "6-15 characters including a number, a lowercase letter & an uppercase letter." %>
  <span class="waves-effect waves-light btn"><%= f.submit "Sign up" %></span>
<% end %>
